<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="20dp"
    >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tik"
                android:textSize="20sp"
                android:textColor="@color/grey_1000"
                android:text="Are you sure?  ( আপনি  নিশ্চিত? )"
                android:layout_centerHorizontal="true"

                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/tik"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/less_round_button_red"
                        android:text="NO  ( না )"
                        android:textColor="@color/darkRed"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:textColor="@color/green"
                        android:background="@drawable/less_round_button_green"
                        android:text="yes  ( হ্যাঁ )"
                        android:textSize="12sp" />


                </LinearLayout>

            </RelativeLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogprogress"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />


        </RelativeLayout>


</RelativeLayout>